<h1>Listing sushis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sushis.each do |sushi| %>
      <tr>
        <td><%= sushi.name %></td>
        <td><%= sushi.description %></td>
        <td><%= link_to 'Show', sushi %></td>
        <td><%= link_to 'Edit', edit_sushi_path(sushi) %></td>
        <td><%= link_to 'Destroy', sushi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sushi', new_sushi_path %>
